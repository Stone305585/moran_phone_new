<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/run_main_color"
    android:fitsSystemWindows="true"
    tools:context="com.phone.moran.activity.ShareActivity">


    <FrameLayout
        android:id="@+id/bg_LL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/share_blur_bg">


        <FrameLayout
            android:id="@+id/share_bg_FL"
            android:layout_width="match_parent"
            android:layout_height="214dp"
            android:padding="14dp"
            android:layout_gravity="center"
            android:layout_marginBottom="45dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:background="@mipmap/yishuxianfeng_bg_0"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/transparent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:id="@+id/week_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="星期四"
                        android:textColor="@color/run_text_hint_more"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/date_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="五月十一日"
                        android:textColor="@color/run_text_hint_more"
                        android:textSize="16sp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/content_daka"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="23dp"
                    android:lineSpacingExtra="10dp"
                    android:text="法自画生，画自法立，无法非也，终于有法亦非也。故曰：画在有法无法间。\n———潘天寿"
                    android:textColor="@color/text_gray2"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/barcode_share"
                android:layout_gravity="right|bottom"
                android:layout_width="65dp"
                android:layout_height="65dp" />

        </FrameLayout>


        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="45dp">

        </android.support.v4.view.ViewPager>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="45dp"
            android:scrollbars="none"
            app:tabIndicatorColor="@color/run_blue_main"
            app:tabIndicatorHeight="2dp"
            android:background="@color/white"
            app:tabMode="fixed"
            app:tabPaddingBottom="0dp"
            app:tabPaddingStart="2dp"
            app:tabPaddingEnd="2dp"
            app:tabPaddingTop="0dp"
            app:tabTextColor="@color/run_text_main"
            app:tabSelectedTextColor="@color/run_blue_main" />
    </FrameLayout>
</FrameLayout>
