<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.phone.moran.activity.RegisterActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/title_bar_common"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:paddingLeft="46dp"
            android:paddingRight="46dp"
            android:background="@drawable/bg_shadow"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/email_btn"
                android:layout_width="120dp"
                android:layout_height="32dp"
                android:background="@mipmap/tab_selected_bg"
                android:gravity="center"
                android:text="邮箱注册"
                android:textColor="@color/run_text_main"
                android:textSize="@dimen/moran_text_1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/mobile_btn"
                android:layout_width="120dp"
                android:layout_height="32dp"
                android:background="@mipmap/tab_selected_bg"
                android:gravity="center"
                android:text="手机号注册"
                android:textColor="@color/run_text_main"
                android:textSize="@dimen/moran_text_1" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:background="@mipmap/jianbiantiao"
            android:layout_height="3dp" />


        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_register"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v4.view.ViewPager>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
