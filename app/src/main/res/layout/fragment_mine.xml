<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.phone.moran.fragment.MineFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <ImageView
            android:id="@+id/mine_bg_fl"
            android:src="@mipmap/mine_head_bg"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="220dp" />

        <ImageView
            android:id="@+id/setting_btn"
            android:src="@mipmap/setting_icon"
            android:padding="13dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />


        <ImageView
            android:src="@mipmap/show_right"
            android:padding="13dp"
            android:layout_gravity="right"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/edit_mine_btn"
            android:src="@mipmap/mine_default_head"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_width="65dp"
            android:layout_height="65dp" />
        <TextView
            android:id="@+id/name_tv"
            android:text="未设置"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:textSize="15sp"
            style="@style/text_common_moran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <ImageView
            android:id="@+id/back_btn"
            android:src="@mipmap/back"
            android:padding="9dp"
            android:layout_width="48dp"
            android:layout_height="48dp" />

        <TextView
            android:id="@+id/title_mine"
            android:textColor="@color/run_blue_main"
            android:textSize="15sp"
            android:text="设备"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp" />

        <ImageView
            android:padding="9dp"
            android:layout_width="48dp"
            android:layout_height="48dp" />

    </LinearLayout>

    <TextView
        android:background="@mipmap/jianbiantiao"
        android:layout_width="match_parent"
        android:layout_height="1.7dp" />

    <FrameLayout
        android:id="@+id/mine_content"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</LinearLayout>
